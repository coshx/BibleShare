= form_for @comment do |f|
  #comment_edit_form
    -if @comment.errors.any?
      #error_explanation
        %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
        %ul
          - @comment.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.text_area :content, :style => "height: 70px; width: 100%;"
    .field
      = f.hidden_field :post_id, :value => params[:post_id]
    .actions
      = f.submit 'Edit', :class => 'btn btn-success'
      = link_to 'Cancel', "#", :id => 'cancel-button', :remote => true, :class => 'btn btn-success', :onClick => "cancelCommentEdit(#{@index})"
