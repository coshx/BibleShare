%p#notice= notice

%p
  %b Title:
  = @passage.title
%p
  %b Bible:
  = @passage.render_bible_verses.html_safe
%p
  %b Content:
  = @passage.content

= link_to 'Edit', edit_passage_path(@passage)
\|
= link_to 'Back', passages_path
\|
= link_to 'Share your thought', new_post_path(:passage_id => @passage.id), :remote => true

#new_post

%br
%br
%br

#posts
  %h2 Posts
  - @passage.posts.each do |post|
    = post.content
    %br
    = link_to 'Comment on this post', new_comment_path(:post_id => post.id)
    %h5 Comments
    - post.comments.each do |comment|
      = comment.content
    %br
    %br
