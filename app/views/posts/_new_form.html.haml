= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_area :content, :class => 'span6', :style => "height: 230px;"
  .field
    = f.hidden_field :passage_id, :value => params[:passage_id]
  .actions
    = f.submit 'Share!', :class => 'btn btn-success'
    = link_to 'Cancel', "#", :id => 'cancel-button', :remote => true, :class => 'btn btn-success', :onClick => "cancelPostShare()"
